# NVIDIA NIM Configuration
NVIDIA_API_KEY=nvapi-your-key-here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=moonshotai/kimi-k2-thinking

# Groq Configuration (Secondary LLM)
GROQ_API_KEY=gsk-your-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Vector Database
VECTOR_DB_PATH=./data/vector_store
FAISS_INDEX_PATH=./data/faiss_index.bin
BM25_INDEX_PATH=./data/bm25_index.pkl

# Metadata Database
SQLITE_DB_PATH=./data/metadata.db

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50

# Memory Configuration
MEMORY_DECISION_TEMPERATURE=0.3
MEMORY_CONFIDENCE_THRESHOLD=0.7

# Sandbox Configuration
SANDBOX_TIMEOUT=30
SANDBOX_MAX_MEMORY_MB=512
SANDBOX_MAX_OUTPUT_LENGTH=10000

# Open-Meteo API (Free, no key needed)
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1

# Security
ALLOWED_FILE_TYPES=pdf,txt,md,html
MAX_UPLOAD_SIZE=52428800

# Feature Flags
ENABLE_HYBRID_SEARCH=true
ENABLE_CITATIONS=true
ENABLE_MEMORY=true
ENABLE_SANDBOX=true
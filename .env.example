# OpenRouter Configuration (Primary LLM + Embeddings)
OPENROUTER_API_KEY=sk-or-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=moonshotai/kimi-k2.5
OPENROUTER_EMBEDDING_MODEL=qwen/qwen3-embedding-8b
OPENROUTER_EMBEDDING_DIMENSION=4096

# NVIDIA NIM Configuration (Fallback Embeddings + Reranking)
NVIDIA_API_KEY=nvapi-your-key-here
NVIDIA_EMBEDDING_API_KEY=nvapi-your-embedding-key-here
NVIDIA_RERANK_API_KEY=nvapi-your-rerank-key-here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=moonshotai/kimi-k2.5
NVIDIA_EMBEDDING_MODEL=nvidia/llama-3.2-nv-embedqa-1b-v2
NVIDIA_EMBEDDING_DIMENSION=2048

# NVIDIA Reranker Configuration
RERANK_MODEL=nvidia/llama-3.2-nv-rerankqa-1b-v2
RERANK_TOP_K=5
RERANK_CANDIDATES=20

# Groq Configuration (Fallback LLM)
GROQ_API_KEY=gsk-your-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Vector Database
FAISS_INDEX_PATH=./data/faiss_index.bin
BM25_INDEX_PATH=./data/bm25_index.pkl

# Metadata Database
SQLITE_DB_PATH=./data/metadata.db

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50

# Embedding Configuration
EMBEDDING_BATCH_SIZE=50
EMBEDDING_PROVIDER=openrouter

# Memory Configuration
MEMORY_DECISION_TEMPERATURE=0.3
MEMORY_CONFIDENCE_THRESHOLD=0.7

# Sandbox Configuration
SANDBOX_TIMEOUT=30
SANDBOX_MAX_MEMORY_MB=512
SANDBOX_MAX_OUTPUT_LENGTH=10000

# Open-Meteo API (Free, no key needed)
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1

# Rate Limiting (NVIDIA NIM fallback only)
API_REQUESTS_PER_MINUTE=40
API_BATCH_DELAY_SECONDS=1.5

# Security
MAX_UPLOAD_SIZE=52428800

# Feature Flags
ENABLE_HYBRID_SEARCH=true
ENABLE_CITATIONS=true
ENABLE_MEMORY=true
ENABLE_SANDBOX=true
ENABLE_RERANKING=true
